{
	"root": true,
	"extends": [
		"airbnb-base"
	],
	"env": {
		"es6": true,
		"browser": true,
		"jest": true
	},
	"parser": "@babel/eslint-parser",
	"rules": {
		"no-plusplus": 0,
		"no-underscore-dangle": 0,
		"no-param-reassign": 0,
		"no-restricted-syntax": [
			"error",
			"LabeledStatement",
			"WithStatement"
		],
		"indent": [
			2,
			"tab"
		],
		"no-tabs": 0,
		"prefer-arrow-callback": "off",
		"function-paren-newline": [
			"error",
			"consistent"
		],
		"func-names": [
			"error",
			"never"
		],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		]
	}
}
